<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link rel="stylesheet" href="../css/products.css">
  <title>Products</title>
</head>
<body>

  <%- include('partials/header') %>

  <main>

    <div class="products-grid">
      <% products.forEach(product => { %>
        <div class="product-card">
          <% if(product.image) { %>
            <img src="/uploads/<%= product.image %>" alt="<%= product.name %>" class="product-image">
          <% } else { %>
            <img src="/uploads/placeholder.jpg" alt="Placeholder" class="product-image">
          <% } %>

          <div class="product-info">
            <a href="/products/<%= product._id %>" class="product-name"><%= product.name %></a>
            <p class="product-price">â‚¹<%= product.price %></p>
            <a href="/cart/add/<%= product._id %>" class="btn-add">Add to Cart</a>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <%- include('partials/footer') %>

  <% if (typeof message !== 'undefined') { %>
        <script>
          Swal.fire({
            toast: true,
            position: "top",     
            icon: "<%= type %>",
            title: "<%= message %>",
            showConfirmButton: false,
            timer: 2000,
            timerProgressBar: true,
            width: "300px"         
          });
        </script>
      <% } %>

</body>
</html>
