<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link rel="stylesheet" href="../css/products.css">
  <title>Products</title>
</head>
<body>

  <%- include('partials/header') %>

  <main>

    <div class="categories">
  <div class="category-card">
    <a href="/categories/electronics">
      <img src="../banner/electronics.jpeg" alt="Electronics">
      <span>Electronics</span>
    </a>
  </div>

  <div class="category-card">
    <a href="/categories/fashion">
      <img src="../banner/clothing.jpeg" alt="Fashion">
      <span>clothing</span>
    </a>
  </div>

  <div class="category-card">
    <a href="/categories/books">
      <img src="../banner/books.jpeg" alt="Books">
      <span>Stationery</span>
    </a>
  </div>

  <div class="category-card">
    <a href="/categories/healthcare">
      <img src="../banner/healthcare.jpeg" alt="Healthcare">
      <span>Healthcare</span>
    </a>
  </div>

  <div class="category-card">
    <a href="/categories/sports">
      <img src="../banner/sports.jpeg" alt="Sports">
      <span>Sports</span>
    </a>
  </div>

  <div class="category-card">
    <a href="/categories/furniture">
      <img src="../banner/ferniture.jpeg" alt="Furniture">
      <span>Furniture</span>
    </a>
  </div>

  <div class="category-card">
    <a href="/categories/grocery">
      <img src="../banner/grocery.jpeg" alt="Grocery">
      <span>Grocery</span>
    </a>
  </div>

  <div class="category-card">
    <a href="/categories/kitchen">
      <img src="../banner/kitchen.jpeg" alt="Kitchen">
      <span>Kitchen</span>
    </a>
  </div>
</div>


    <section class="banner">
      <div class="banner-content">
        <!-- <h2>best electronics</h2> -->
        <a href="/categories/elect" class="banner-btn">Shop Now</a>
      </div>
    </section>

    <div class="products-grid">
      <% products.forEach(product => { %>
        <div class="product-card">
          <% if(product.image) { %>
            <img src="/uploads/<%= product.image %>" alt="<%= product.name %>" class="product-image">
          <% } else { %>
            <img src="" alt="Placeholder" class="product-image">
          <% } %>

          <div class="product-info">
            <a href="/products/<%= product._id %>" class="product-name"><%= product.name %></a>
            <p class="product-price">â‚¹<%= product.price %></p>
            <a href="/cart/add/<%= product._id %>" class="btn-add">Add to Cart</a>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <%- include('partials/footer') %>

  <% if (typeof message !== 'undefined') { %>
        <script>
          Swal.fire({
            toast: true,
            position: "top",     
            icon: "<%= type %>",
            title: "<%= message %>",
            showConfirmButton: false,
            timer: 2000,
            timerProgressBar: true,
            width: "300px"         
          });
        </script>
      <% } %>

</body>
</html>
