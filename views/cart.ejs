<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../css/products.css">
  <title>My Cart</title>

  <style>
    /* body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      background: #f8f9fa;
    } */

    h1 {
      text-align: center;
      color: #333;
      margin-bottom: 20px;
    }

    .cart-container {
      max-width: 500px;
      margin: 0 0 0 40px;  
      background: #fff;
      padding: 20px;
      border-radius: 10px;
    }

    .empty-message {
      text-align: center;
      color: #888;
      font-size: 18px;
      margin: 20px 0;
    }

    .cart-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom: 1px solid #ddd;
      padding: 15px 0;
    }

    .item-image img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 5px;
      margin-right: 15px;
    }

    .item-info {
      flex: 1;
    }

    .item-name {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 5px;
      color: #333;
    }

    .item-price {
      color: #28a745;
      font-weight: bold;
      margin-bottom: 5px;
    }

    .item-quantity {
      font-size: 14px;
      color: #666;
    }

    .remove-btn {
      background: #dc3545;
      color: #fff;
      text-decoration: none;
      padding: 8px 12px;
      border-radius: 5px;
    }

    .remove-btn:hover {
      background: #b02a37;
    }

    .cart-total {
      text-align: right;
      font-size: 20px;
      font-weight: bold;
      margin: 20px 0;
      color: #333;
    }

    .cart-actions {
      text-align: center;
    }

    .btn {
      display: inline-block;
      background: #007bff;
      color: #fff;
      text-decoration: none;
      padding: 10px 18px;
      border-radius: 5px;
    }

    .btn:hover {
      background: #0056b3;
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <h1>My Cart</h1>

  <div class="cart-container">
    <% if (cartItems.length === 0) { %>
      <p class="empty-message">Your cart is empty.</p>
    <% } else { %>
      <% cartItems.forEach(item => { %>
        <div class="cart-item">
          <div class="item-image">
            <img src="/uploads/<%= item.image %>" alt="<%= item.name %>" class="cart-product-image">
          </div>
          <div class="item-info">
            <div class="item-name"><%= item.name %></div>
            <div class="item-price">₹<%= item.price %></div>
            <div class="item-quantity">Quantity: <%= item.quantity %></div>
          </div>
          <a href="/cart/remove/<%= item._id %>" class="remove-btn">Remove</a>
        </div>
      <% }) %>
      <div class="cart-total">
        Total: ₹<%= total %>
      </div>



      <div class="cart-actions">
        <a href="/products" class="btn">Continue Shopping</a>
        <a href="/checkout" class="btn">Checkout</a>
      </div>


      
    <% } %>
  </div>

</body>
</html>
